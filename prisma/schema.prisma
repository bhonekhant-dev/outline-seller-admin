generator client {
provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum CustomerStatus {
  ACTIVE
  EXPIRED
  REVOKED
}

model Customer {
  id               String         @id @default(cuid())
  name             String
  phone            String?
  note             String?
  planDays         Int
  createdAt        DateTime       @default(now())
  expiresAt        DateTime
  status           CustomerStatus @default(ACTIVE)
  outlineKeyId     String
  outlineAccessUrl String

  @@index([status])
  @@index([expiresAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  action     String
  customerId String?
  createdAt  DateTime @default(now())
  meta       Json?

  @@index([customerId])
}
